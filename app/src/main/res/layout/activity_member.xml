<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memberGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2pt"
            android:text="Gender"/>

        <TextView
            android:id="@+id/memberFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2pt"
            android:text="First name"/>

        <TextView
            android:id="@+id/memberLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name"/>
    </LinearLayout>

    <TextView
        android:id="@+id/memberEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"/>

    <TextView
        android:id="@+id/memberBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birth date"/>

    <TextView
        android:id="@+id/memberPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"/>

    <TextView
        android:id="@+id/memberAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/callButton"
        android:src="@drawable/call"
        android:layout_gravity="center_horizontal"
        android:onClick="call"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send a mail"
        android:id="@+id/sendMailButton"
        android:layout_gravity="center_horizontal"
        android:onClick="sendAnEmail"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to the list"
        android:id="@+id/backToMembersListButton"
        android:layout_gravity="center_horizontal"
        android:onClick="backToList"/>

</LinearLayout>